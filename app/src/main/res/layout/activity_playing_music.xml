<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/playpage_background"
    >
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#70000000" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/placeholder_disk_play_program"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="140dp"
            />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/play_needle"
            android:layout_gravity="center_horizontal"
            android:transformPivotX="15.1dp"
            android:transformPivotY="15.1dp"
            android:rotation="-25"
            android:layout_marginTop="@dimen/needle_height"
            android:layout_marginLeft="25dp"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:contentInsetStart="0.0dp"
            app:layout_scrollFlags="enterAlways|scroll"
            android:background="@android:color/transparent"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/Theme.AppCompat"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ToolbarStyle">

        </android.support.v7.widget.Toolbar>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/play_topbar_line"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>

    <com.stest.view.AlbumViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal" />

</FrameLayout>